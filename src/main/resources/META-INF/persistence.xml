<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"




             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="hospitalPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.teleexpertise.model.Utilisateur</class>
        <class>com.example.teleexpertise.model.ActeTechnique</class>
        <class>com.example.teleexpertise.model.Consultation</class>
        <class>com.example.teleexpertise.model.Creneau</class>
        <class>com.example.teleexpertise.model.DemandeExpertise</class>
        <class>com.example.teleexpertise.model.DossierMedical</class>
        <class>com.example.teleexpertise.model.MedecinGeneraliste</class>
        <class>com.example.teleexpertise.model.MedecinSpecialiste</class>
        <class>com.example.teleexpertise.model.Infirmier</class>
        <class>com.example.teleexpertise.model.Patient</class>
        <class>com.example.teleexpertise.model.SignesVitaux</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/teleExpert?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
